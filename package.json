{
  "name": "bisonica",
  "version": "0.1.2",
  "type": "module",
  "exports": {
    ".": "./source/chart.js",
    "./styles.css": "./source/index.css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vijithassar/bisonica.git"
  },
  "scripts": {
    "build": "esbuild --bundle --format=esm --external:d3 --external:string.prototype.matchall --outfile=build/bisonica.js source/chart.js",
    "postbuild": "yarn run archive",
    "archive": "zip -jr build/bisonica-$(npm view bisonica version).zip build/bisonica.js source/index.css",
    "lint-git": "commitlint -- --to=HEAD",
    "lint-js": "eslint source tests/unit tests/integration",
    "lint-styles": "stylelint source/index.css",
    "test": "qunit tests/*",
    "test-serve": "testem --file ./tests/testem.cjs",
    "test-ci": "testem --file ./tests/testem.cjs ci",
    "types": "tsc --noEmit --allowJs --checkJs --moduleResolution node --target ES2022 ./source/chart.js",
    "release": "npx standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "d3": "^7.6.1",
    "esbuild": "^0.14.43",
    "eslint": "^8.17.0",
    "qunit": "^2.19.1",
    "standard-version": "^9.5.0",
    "string.prototype.matchall": "^4.0.7",
    "stylelint": "^14.9.1",
    "stylelint-config-standard": "^26.0.0",
    "testem": "^3.8.0",
    "typescript": "^4.7.3"
  },
  "peerDependencies": {
    "d3": "^6.7.0 || ^7.0.0",
    "string.prototype.matchall": "^4.0.7"
  }
}
