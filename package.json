{
  "name": "bisonica",
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": "./source/chart.js"
  },
  "scripts": {
    "build": "esbuild --bundle --format=esm --outfile=build/charts.js source/chart.js",
    "lint-git": "commitlint -- --to=HEAD",
    "lint-js": "eslint source tests/unit tests/integration",
    "test-build": "esbuild tests/unit/* tests/integration/* --bundle --splitting --format=esm --outdir=tests/build",
    "test": "qunit tests/*",
    "test-serve": "testem --file ./tests/testem.cjs",
    "test-ci": "testem --file ./tests/testem.cjs ci",
    "types": "tsc --noEmit --allowJs --checkJs --moduleResolution node --target ES2022 ./source/chart.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "esbuild": "^0.14.43",
    "eslint": "^8.17.0",
    "qunit": "^2.19.1",
    "testem": "^3.8.0",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "d3": "^7.4.4",
    "string.prototype.matchall": "^4.0.7"
  }
}
